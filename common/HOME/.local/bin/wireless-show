#!/usr/bin/env bash

if rfkill --output TYPE,SOFT | grep "wlan" | grep -q "unblocked"; then
    notify-send -a "wlan" -i "/usr/share/icons/Adwaita/symbolic/devices/network-wireless-symbolic.svg" "W-LAN enabled"
else
    notify-send -a "wlan" -i "/usr/share/icons/Adwaita/symbolic/devices/network-wireless-symbolic.svg" "W-LAN disabled"
fi
